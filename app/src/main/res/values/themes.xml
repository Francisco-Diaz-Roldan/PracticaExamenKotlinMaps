<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PracticaExamen" parent="Theme.Material3.DayNight">
        <item name="android:textColorPrimary">@color/orange</item>
    </style>
    <!-- Estilo específico para la Toolbar -->
    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <!-- Cambia el fondo de la Toolbar al color deseado -->
        <item name="android:background">@color/orange</item>
        <!-- Establece el título de la Toolbar -->
        <item name="android:title">Ejercicio Unidad 8</item>
        <!-- Establece el color del texto de la Toolbar -->
        <item name="titleTextColor">@android:color/white</item>
        <!-- Establece el color de los iconos -->
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>

    <style name="Theme.Ejercicio_Tema_8" parent="Base.Theme.PracticaExamen">
        <!-- Aplica el nuevo estilo de la Toolbar -->
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <!-- Estilo para personalizar la barra de herramientas -->
    <style name="Widget.PracticaExamen.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="Theme.PracticaExamen" parent="Base.Theme.PracticaExamen" />
</resources>